@using QLCHTBDD_62131904.ViewModels
@model IEnumerable<ProductViewModel>

@{
    ViewBag.Title = "Danh Sách Sản Phẩm";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <!-- Card sản phẩm -->
                    <a href="@Url.Action("ChiTietSanPham", "HomePage_62131904", new { id = product.MaSanPham })" class="text-decoration-none">
                        <div class="card mb-4 shadow-sm">
                            <div class="card-product">
                                <!-- Hình ảnh sản phẩm -->
                                <div class="image-container">
                                    <img class="card-img-top" src="@product.HinhAnh" alt="@product.TenSanPham" />
                                </div>
                                <!-- Nội dung sản phẩm -->
                                <div class="card-body">
                                    <h6 class="card-title text-truncate">@product.TenSanPham</h6>
                                    <small class="text-muted">Độ phân giải: @product.DoPhanGiaiManHinh</small><br />
                                    <small class="text-muted">Kích thước: @product.KichThuocManHinh</small>
                                    <p class="">
                                        <strong>Chọn ROM:</strong>
                                        <div class="rom-options">
                                            @foreach (var variant in product.Variants)
                                            {
                                                <buttony class="btn btn-outline-secondary btn-sm rom-option"
                                                        data-price="@variant.DonGia"
                                                        onclick="updatePrice(this)">
                                                    @variant.ROM
                                                </buttony>
                                            }
                                        </div>
                                    </p>
                                    <p class="card-text text-danger">
                                        Giá:
                                        <span class="price">
                                            @if (product.Variants != null && product.Variants.Any())
                                            {
                                                @product.Variants.First().DonGia.ToString("N0")
                                            }
                                            else
                                            {
                                                @:Liên hệ
                                            }
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            for (int i = 0; i < 8; i++)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card shimmer mb-4 shadow-sm">
                        <div class="shimmer-img"></div>
                        <div class="card-body">
                            <div class="shimmer-text shimmer-title"></div>
                            <div class="shimmer-text shimmer-line"></div>
                            <div class="shimmer-text shimmer-line"></div>
                            <div class="shimmer-text shimmer-line"></div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<script>
    function updatePrice(button) {
        // Lấy giá từ thuộc tính data-price
        const price = button.getAttribute('data-price');

        // Tìm phần tử hiển thị giá trong card hiện tại
        const card = button.closest('.card');
        const priceElement = card.querySelector('.price');

        // Cập nhật giá hiển thị
        priceElement.textContent = parseInt(price).toLocaleString() + " đ";
    }
</script>


<style>
    /* Card có dữ liệu */
    .card { 
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .card-product {
        height: 500px;
    }

    .card-body {
        padding: 5px;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    }

    .image-container {
        padding: 10px;
    }

    .card-img-top {
        height: 190px;
        object-fit: cover;
    }

    /* Shimmer loading */
    .shimmer {
        background-color: #f6f6f6;
        border-radius: 8px;
        overflow: hidden;
    }

    .shimmer-img {
        width: 100%;
        height: 200px;
        background: linear-gradient(90deg, #f6f7f9 25%, #e0e0e0 50%, #f6f7f9 75%);
        background-size: 200% 100%;
        animation: shimmer-loading 1.5s infinite;
    }

    .shimmer-text {
        height: 15px;
        margin: 10px 0;
        background: linear-gradient(90deg, #f6f7f9 25%, #e0e0e0 50%, #f6f7f9 75%);
        background-size: 200% 100%;
        animation: shimmer-loading 1.5s infinite;
    }

    .shimmer-title {
        height: 20px;
        width: 60%;
        margin-bottom: 15px;
    }

    .shimmer-line {
        width: 80%;
        height: 15px;
        margin-bottom: 8px;
    }

    /* Animation shimmer */
    @@keyframes shimmer-loading {
        0% {
            background-position: -200% 0;
        }

        100% {
            background-position: 200% 0;
        }
    }

    /* ROM Button */
    .rom-option {
        margin: 2px;
        padding: 5px 10px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .card {
            margin-bottom: 20px;
        }
    }
</style>


