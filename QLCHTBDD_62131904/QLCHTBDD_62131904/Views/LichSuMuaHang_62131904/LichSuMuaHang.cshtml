@model List<QLCHTBDD_62131904.ViewModels.LichSuMuaHangViewModel>

@{
    ViewBag.Title = "LichSuMuaHang";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container mt-4">
    <h2>Lịch sử mua hàng</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">Bạn chưa có đơn hàng nào.</div>
    }
    else
    {
        foreach (var order in Model)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <strong>Đơn hàng #@order.MaDonHang</strong> |
                    Ngày đặt: @order.NgayDatHang.ToString("dd/MM/yyyy") |
                    Trạng thái: <span class="badge badge-primary">@order.TrangThai</span>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Màu sắc</th>
                                <th>RAM</th>
                                <th>ROM</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in order.ChiTiet)
                            {
                                <tr>
                                    <td>@item.TenSanPham</td>
                                    <td>@item.MauSac</td>
                                    <td>@item.RAM</td>
                                    <td>@item.ROM</td>
                                    <td>@item.SoLuong</td>
                                    <td>@item.DonGia.ToString("N0") đ</td>
                                    <td>@item.ThanhTien.ToString("N0") đ</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6" class="text-right"><strong>Tổng cộng:</strong></td>
                                <td>@order.TongTien.ToString("N0") đ</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        }
    }
</div>



<style>
    .card-header {
        background-color: #007bff
</style>