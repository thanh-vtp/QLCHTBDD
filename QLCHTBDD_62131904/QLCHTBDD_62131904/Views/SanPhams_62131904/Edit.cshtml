@model QLCHTBDD_62131904.Models.SanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
}


<div style="margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 10px; max-width: 600px; background-color: #f9f9f9;">
    <h2 style="text-align: center; font-weight: bold; color: #007BFF;">Cập nhật thông tin</h2>

    @using (Html.BeginForm("Edit", "SanPhams_62131904", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div style="margin-bottom: 20px;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaSP)
        </div>

        <div style="margin-bottom: 15px;">
            <label for="HoSV" style="font-weight: bold; margin-bottom: 5px; display: block;">Tên sản phẩm:</label>
            @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control", style = "width: 100%;" } })
            @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
        </div>

        <div style="margin-bottom: 15px;">
            <label for="TenSV" style="font-weight: bold; margin-bottom: 5px; display: block;">Mô tả:</label>
            @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control", style = "width: 100%;" } })
            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
        </div>

        <div style="margin-bottom: 15px;">
            <label for="Luong" style="font-weight: bold; margin-bottom: 5px; display: block;">Đơn giá:</label>
            @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control", style = "width: 100%;" } })
            @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
        </div>

        <div style="margin-bottom: 15px;">
            @Html.LabelFor(model => model.DonViTinh, "Đơn vị tính", new { style = "font-weight: bold;" })
            @Html.DropDownListFor(model => model.DonViTinh,
                                  new SelectList(new List<string> { "Cái", "Chiếc", "Bộ", "Máy" }),
                                  "Chọn đơn vị tính",
                                  new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DonViTinh, "", new { @class = "text-danger" })
        </div>

        <!-- Hiển thị các hình ảnh hiện tại -->
        <div style="margin-bottom: 15px;">
            <label style="font-weight: bold;">Hình ảnh hiện tại:</label>
            @foreach (var image in ViewBag.CurrentImages as List<QLCHTBDD_62131904.Models.HinhAnhSanPham>)
            {
                <div>
                    <img src="@image.AnhPhuSP" style="max-width: 100px; height: auto;" alt="Ảnh sản phẩm" />
                    <br />
                </div>
            }
        </div>

        <!-- Thêm nhiều hình ảnh mới -->
        <div style="margin-bottom: 15px;">
            @Html.Label("Thêm hình ảnh mới", new { style = "font-weight: bold;" })
            <input type="file" name="Avatar[]" accept="image/*" class="form-control" multiple />
            @Html.ValidationMessageFor(model => model.AnhSP, "", new { @class = "text-danger" })
        </div>

        <div style="margin-bottom: 15px;">
            <label for="MaLSP" style="font-weight: bold; margin-bottom: 5px; display: block;">Loại sản phẩm:</label>
            @Html.DropDownList("MaLSP", null, new { @class = "form-control", style = "width: 100%;" })
            @Html.ValidationMessageFor(model => model.MaLSP, "", new { @class = "text-danger" })
        </div>

        <div style="text-align: center; margin-top: 20px;">
            <button type="submit" class="btn btn-primary" style="padding: 10px 15px; margin-right: 10px;">Lưu thay đổi</button>
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary", style = "padding: 10px 15px; text-decoration: none;" })
        </div>
    }
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }
</style>