@model QLCHTBDD_62131904.Models.SanPham

@{
    ViewBag.Title = "Thông tin sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 10px; max-width: 600px; background-color: #f9f9f9;">
    <h2 style="text-align: center;margin-bottom: 20px; font-weight: bold; color: #007BFF;">Thông tin chi tiết</h2>
    <div style="display: flex; flex-direction: column; align-items: center; margin-bottom: 20px; text-align: center;">
        <div style="width: 200px; height: 200px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
            <img src="/Images/@Html.DisplayFor(model => model.AnhSP)" alt="Ảnh sản phẩm" style="max-width: 100%; max-height: 100%; border-radius: 5px; border: 2px solid #007BFF; object-fit: cover; " onerror="this.style.display='none'; this.parentElement.innerHTML = this.alt;">
        </div>
     
    </div>
    <table style="width: 100%; font-size: 14px; border-collapse: collapse;">
        <tr>
            <td style="font-weight: bold; padding: 8px; border-bottom: 1px solid #ddd; width: 40%;">Mã sản phẩm:</td>
            <td style="padding: 8px; border-bottom: 1px solid #ddd;">@Model.MaSP</td>
        </tr>
        <tr>
            <td style="font-weight: bold; padding: 8px; border-bottom: 1px solid #ddd;">Tên sản phẩm:</td>
            <td style="padding: 8px; border-bottom: 1px solid #ddd;">@Model.TenSP</td>
        </tr>
        <tr>
            <td style="font-weight: bold; padding: 8px; border-bottom: 1px solid #ddd;">Mô tả:</td>
            <td style="padding: 8px; border-bottom: 1px solid #ddd;">@Model.MoTa</td>
        </tr>
        <tr>
            <td style="font-weight: bold; padding: 8px; border-bottom: 1px solid #ddd;">Đơn giá:</td>
            <td style="padding: 8px; border-bottom: 1px solid #ddd;">@Model.DonGia</td>
        </tr>
        <tr>
            <td style="font-weight: bold; padding: 8px; border-bottom: 1px solid #ddd;">Đơn vị tính:</td>
            <td style="padding: 8px; border-bottom: 1px solid #ddd;">@Model.DonViTinh</td>
        </tr>
        <tr>
            <td style="font-weight: bold; padding: 8px; border-bottom: 1px solid #ddd;">Loại sản phẩm:</td>
            <td style="padding: 8px; border-bottom: 1px solid #ddd;">@Model.LoaiSP.TenLSP</td>
        </tr>
    </table>
    <div style="text-align: center; margin-top: 20px;">
        @Html.ActionLink("Cập nhật", "Edit", new { id = Model.MaSP }, new { @class = "btn btn-primary", style = "margin-right: 10px; padding: 10px 15px; text-decoration: none;" })
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary", style = "padding: 10px 15px; text-decoration: none;" })
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }
</style>