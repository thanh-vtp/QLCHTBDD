@model QLCHTBDD_62131904.ViewModels.SanPhamViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Thông tin sản phẩm</h2>
<link href="~/Content/_pages_sanpham.css" rel="stylesheet" />
<div class="form-container">
    <!-- Thông tin sản phẩm -->
    <div class="form-section" id="product-info">
        <h3>Thông tin sản phẩm</h3>
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(model => model.TenHangSanXuat, "Hãng sản phẩm", new { @class = "form-label" })
                @Html.EditorFor(model => model.TenHangSanXuat, new { htmlAttributes = new { @class = "form-control",  @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.TenHangSanXuat, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TenLoaiSanPham, "Loại sản phẩm", new { @class = "form-label" })
                @Html.EditorFor(model => model.TenLoaiSanPham, new { htmlAttributes = new { @class = "form-control" ,  @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.TenLoaiSanPham, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TenSP, "Tên sản phẩm", new { @class = "form-label" })
            @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control",  @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MoTa, "Mô tả", new { @class = "form-label" })
            @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control",  @readonly = "readonly", rows = "3" })
            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
        </div>
    </div>


    <!-- Nút hành động -->
    <div class="form-group form-group--actions">
        @Html.ActionLink("Cập nhật", "Edit", new { id = Model.MaSP }, new { @class = "btn btn-primary", style = "margin-right: 10px; padding: 10px 15px; text-decoration: none;" })
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>


