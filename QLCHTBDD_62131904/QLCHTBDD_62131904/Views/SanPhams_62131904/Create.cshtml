@model QLCHTBDD_62131904.Models.SanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Thêm mới sản phẩm</h2>

@using (Html.BeginForm("Create", "SanPhams_62131904", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "")

    <div class="form-container">
        <!-- Thông tin sản phẩm -->
        <div class="form-section" id="product-info">
            <h3>Thông tin sản phẩm</h3>
            <div class="form-row">
                <div class="form-group">
                    @Html.LabelFor(model => model.MaHang, "Hãng sản phẩm", new { @class = "form-label" })
                    @Html.DropDownList("MaHang", null, "Chọn hãng sản phẩm", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaHang, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MaLSP, "Loại sản phẩm", new { @class = "form-label" })
                    @Html.DropDownList("MaLSP",
                    new SelectList(ViewBag.MaLSP, "Value", "Text"),
                    "Chọn loại sản phẩm",
                    new { @class = "form-control", id = "productType" })
                    @Html.ValidationMessageFor(model => model.MaLSP, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.TenSP, "Tên sản phẩm", new { @class = "form-label" })
                @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên sản phẩm" } })
                @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MoTa, "Mô tả", new { @class = "form-label" })
                @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", placeholder = "Nhập mô tả", rows = "3" })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Cấu hình và bộ nhớ -->
        <div class="form-section" id="config-memory">
            <h3>Cấu hình và bộ nhớ</h3>
            <div class="config-memory-grid">
                <div class="form-group">
                    <label for="HeDieuHanh" class="form-label">Hệ điều hành</label>
                    <input type="text" id="HeDieuHanh" name="HeDieuHanh" class="form-control" placeholder="Nhập hệ điều hành" />
                </div>

                <div class="form-group">
                    <label for="MaRAM" class="form-label">RAM</label>
                    @Html.DropDownList("MaRAM", ViewBag.MaRAM as SelectList, "Chọn dung lượng", new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="ChipXuLy" class="form-label">Chip xử lý</label>
                    <input type="text" id="ChipXuLy" name="ChipXuLy" class="form-control" placeholder="Nhập chip xử lý" />
                </div>
                <div class="form-group">
                    <label for="MaROM" class="form-label">Dung lượng lưu trữ</label>
                    @Html.DropDownList("MaROM", ViewBag.MaROM as SelectList, "Chọn dung lượng", new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="TocDoCPU" class="form-label">Tốc độ CPU</label>
                    <input type="text" id="TocDoCPU" name="TocDoCPU" class="form-control" placeholder="Nhập tốc độ CPU" />
                </div>
                <div class="form-group">
                    <label for="DungLuongConLai" class="form-label">Dung lượng còn lại (Khả dụng)</label>
                    <input type="text" id="DungLuongConLai" name="DungLuongConLai" class="form-control" placeholder="Nhập dung lượng còn lại" />
                </div>
                <div class="form-group">
                    <label for="ChipDoHoa" class="form-label">Chip đồ họa</label>
                    <input type="text" id="ChipDoHoa" name="ChipDoHoa" class="form-control" placeholder="Nhập chip đồ họa" />
                </div>
                <div class="form-group">
                    <label for="DanhBa" class="form-label">Danh bạ</label>
                    <input type="text" id="DanhBa" name="DanhBa" class="form-control" placeholder="Nhập số danh bạ" />
                </div>
            </div>
        </div>
        <!-- Màn hình -->
        <div class="form-section" id="display-info">
            <h3>Màn hình</h3>
            <div class="display-info-grid">
                <div class="form-group">
                    <label for="CongNgheManHinh" class="form-label">Công nghệ màn hình</label>
                    <input type="text" id="CongNgheManHinh" name="CongNgheManHinh" class="form-control" placeholder="Nhập công nghệ màn hình" />
                </div>
                <div class="form-group">
                    <label for="ManHinh" class="form-label">Màn hình</label>
                    <input type="text" id="ManHinh" name="ManHinh" class="form-control" placeholder="Nhập tên màn hình" />
                </div>
                <div class="form-group">
                    <label for="DoPhanGiaiManHinh" class="form-label">Độ phân giải màn hình</label>
                    <input type="text" id="DoPhanGiaiManHinh" name="DoPhanGiaiManHinh" class="form-control" placeholder="Nhập độ phân giải màn hình" />
                </div>
                <div class="form-group">
                    <label for="DoSangToiDa" class="form-label">Độ sáng tối đa</label>
                    <input type="text" id="DoSangToiDa" name="DoSangToiDa" class="form-control" placeholder="Nhập độ sáng tối đa" />
                </div>
                <div class="form-group">
                    <label for="MatKinh" class="form-label">Mặt kính cảm ứng</label>
                    <input type="text" id="MatKinh" name="MatKinh" class="form-control" placeholder="Nhập loại mặt kính" />
                </div>
            </div>
        </div>
        <!-- Camera -->
        <div class="form-section" id="camera-info">
            <h3>Camera</h3>
            <div class="camera-info-grid">
                <div class="form-group">
                    <label for="DoPhanGiaiCameraSau" class="form-label">Độ phân giải camera sau</label>
                    <input type="text" id="DoPhanGiaiCameraSau" name="DoPhanGiaiCameraSau" class="form-control" placeholder="Nhập độ phân giải camera sau" />
                </div>
                <div class="form-group">
                    <label for="DoPhanGiaiCameraTruoc" class="form-label">Độ phân giải camera trước</label>
                    <input type="text" id="DoPhanGiaiCameraTruoc" name="DoPhanGiaiCameraTruoc" class="form-control" placeholder="Nhập độ phân giải camera trước" />
                </div>
                <div class="form-group">
                    <label for="TinhNangCameraSau" class="form-label">Tính năng camera sau</label>
                    <input type="text" id="TinhNangCameraSau" name="TinhNangCameraSau" class="form-control" placeholder="Nhập tính năng camera sau" />
                </div>
                <div class="form-group">
                    <label for="TinhNangCameraTruoc" class="form-label">Tính năng camera trước</label>
                    <input type="text" id="TinhNangCameraTruoc" name="TinhNangCameraTruoc" class="form-control" placeholder="Nhập tính năng camera trước" />
                </div>
                <div class="form-group">
                    <label for="DenFlash" class="form-label">Đèn flash camera sau</label>
                    <input type="text" id="DenFlash" name="DenFlash" class="form-control" placeholder="Có/Không" />
                </div>
                <label for="QuayPhimCameraSau" class="form-label">Quay phim camera sau</label>
                <textarea id="QuayPhimCameraSau" name="QuayPhimCameraSau" class="form-control" placeholder="Nhập độ phân giải quay phim camera sau" rows="3"></textarea>
            </div>
        </div>
        <!-- Pin và sạc -->
        <div class="form-section" id="battery-info">
            <h3>Pin & Sạc</h3>
            <div class="battery-info-grid">
                <div class="form-group">
                    <label for="DungLuongPin" class="form-label">Dung lượng pin</label>
                    <input type="text" id="DungLuongPin" name="DungLuongPin" class="form-control" placeholder="Nhập dung lượng pin" />
                </div>
                <div class="form-group">
                    <label for="LoaiPin" class="form-label">Loại pin</label>
                    <input type="text" id="LoaiPin" name="LoaiPin" class="form-control" placeholder="Nhập loại pin" />
                </div>
                <div class="form-group">
                    <label for="HoTroSacToiDa" class="form-label">Hỗ trợ sạc tối đa</label>
                    <input type="text" id="HoTroSacToiDa" name="HoTroSacToiDa" class="form-control" placeholder="Nhập hỗ trợ sạc tối đa" />
                </div>
                <div class="form-group">
                    <label for="CongNghePin" class="form-label">Công nghệ pin</label>
                    <input type="text" id="CongNghePin" name="CongNghePin" class="form-control" placeholder="Nhập công nghệ pin" />
                </div>
            </div>
        </div>

        <!-- Tiện ích -->
        <div class="form-section" id="utilities-info">
            <h3>Tiện ích</h3>
            <div class="utilities-info-grid">
                <div class="form-group">
                    <label for="BaoMatNangCao" class="form-label">Bảo mật nâng cao</label>
                    <input type="text" id="BaoMatNangCao" name="BaoMatNangCao" class="form-control" placeholder="Nhập bảo mật nâng cao" />
                </div>
                <div class="form-group">
                    <label for="TinhNangDacBiet" class="form-label">Tính năng đặc biệt</label>
                    <input type="text" id="TinhNangDacBiet" name="TinhNangDacBiet" class="form-control" placeholder="Nhập tính năng đặc biệt" />
                </div>
                <div class="form-group">
                    <label for="KhangNuocBui" class="form-label">Kháng nước, bụi</label>
                    <input type="text" id="KhangNuocBui" name="KhangNuocBui" class="form-control" placeholder="Nhập Kháng nước, bụi" />
                </div>
                <div class="form-group">
                    <label for="GhiAm" class="form-label">Ghi âm</label>
                    <input type="text" id="GhiAm" name="GhiAm" class="form-control" placeholder="Nhập công nghệ ghi âm" />
                </div>
                <div class="form-group">
                    <label for="XemPhim" class="form-label">Xem phim</label>
                    <input type="text" id="XemPhim" name="XemPhim" class="form-control" placeholder="Nhập tính năng xem phim" />
                </div>
                <div class="form-group">
                    <label for="NgheNhac" class="form-label">Nghe nhạc</label>
                    <input type="text" id="NgheNhac" name="NgheNhac" class="form-control" placeholder="Nhập công nghệ nghe nhạc" />
                </div>
            </div>
        </div>

        <!-- Kết nối -->
        <div class="form-section" id="connection-info">
            <h3>Kết nối</h3>
            <div class="connection-info-grid">
                <div class="form-group">
                    <label for="MangDiDong" class="form-label">Mạng di động</label>
                    <input type="text" id="MangDiDong" name="MangDiDong" class="form-control" placeholder="Nhập mạng di động" />
                </div>
                <div class="form-group">
                    <label for="SIM" class="form-label">SIM</label>
                    <input type="text" id="SIM" name="SIM" class="form-control" placeholder="Nhập loại SIM" />
                </div>
                <div class="form-group">
                    <label for="Wifi" class="form-label">Wifi</label>
                    <input type="text" id="Wifi" name="Wifi" class="form-control" placeholder="Nhập chuẩn wifi" />
                </div>
                <div class="form-group">
                    <label for="GPS" class="form-label">GPS</label>
                    <input type="text" id="GPS" name="GPS" class="form-control" placeholder="Nhập chuẩn GPS" />
                </div>
                <div class="form-group">
                    <label for="Bluetooth" class="form-label">Bluetooth</label>
                    <input type="text" id="Bluetooth" name="Bluetooth" class="form-control" placeholder="Nhập chuẩn bluetooth" />
                </div>
                <div class="form-group">
                    <label for="CongKetNoiSac" class="form-label">Cổng kết nối/sạc</label>
                    <input type="text" id="CongKetNoiSac" name="CongKetNoiSac" class="form-control" placeholder="Nhập loại cổng kết nối" />
                </div>
                <div class="form-group">
                    <label for="JackTaiNghe" class="form-label">Jack tai nghe</label>
                    <input type="text" id="JackTaiNghe" name="JackTaiNghe" class="form-control" placeholder="Nhập loại Jack tai nghe" />
                </div>
                <div class="form-group">
                    <label for="KetNoiKhac" class="form-label">Kết nối khác</label>
                    <input type="text" id="KetNoiKhac" name="KetNoiKhac" class="form-control" placeholder="Nhập các kết nối khác" />
                </div>
            </div>
        </div>
        <!-- Thiết kế và chất liệu -->
        <div class="form-section" id="design-material-info">
            <h3>Thiết kế & Chất liệu</h3>
            <div class="design-material-info-grid">
                <div class="form-group">
                    <label for="ThietKe" class="form-label">Thiết kế</label>
                    <input type="text" id="ThietKe" name="ThietKe" class="form-control" placeholder="Nhập thiết kế" />
                </div>
                <div class="form-group">
                    <label for="ChatLieu" class="form-label">Chất liệu</label>
                    <input type="text" id="ChatLieu" name="ChatLieu" class="form-control" placeholder="Nhập chất liệu" />
                </div>

                <div class="form-group">
                    <label for="KichThuocKhoiLuong" class="form-label">Kích thước, khối lượng</label>
                    <input type="text" id="KichThuocKhoiLuong" name="KichThuocKhoiLuong" class="form-control" placeholder="Nhập kích thước, khối lượng" />
                </div>
                <div class="form-group">
                    <label for="ThoiDiemRaMat" class="form-label">Thời điểm ra mắt</label>
                    <input type="text" id="ThoiDiemRaMat" name="ThoiDiemRaMat" class="form-control" placeholder="Nhập thời điểm ra mắt" />
                </div>
                <div class="form-group">
                    <label for="Hang" class="form-label">Hãng</label>
                    <input type="text" id="Hang" name="Hang" class="form-control" placeholder="Nhập hãng sản xuất" />
                </div>
            </div>
        </div>

        <!-- Các trường dữ liệu khác -->
        <div class="form-section" id="other-info">
            <h3>Thông tin khác</h3>
            <div class="other-info-grid">
                <div class="form-group">
                    <label for="SoLuong" class="form-label">Số lượng</label>
                    <input type="number" id="SoLuong" name="SoLuong" class="form-control" placeholder="Nhập số lượng" required />
                </div>

                <div class="form-group">
                    <label for="DonViTinh" class="form-label">Đơn vị tính</label>
                    <select id="DonViTinh" name="DonViTinh" class="form-control">
                        <option value="Chiếc">Chiếc</option>
                        <option value="Bộ">Bộ</option>
                    </select>
                </div>


                <div class="form-group">
                    <label for="DonGia" class="form-label">Đơn giá</label>
                    <input type="number" id="DonGia" name="DonGia" class="form-control" placeholder="Nhập đơn giá" required />
                </div>
            </div>
        </div>

        <!-- Nút hành động -->
        <div class="form-group form-group--actions">
            <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .form-container {
        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
        max-width: 900px;
        margin: 30px auto;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-section {
        margin-bottom: 20px;
        padding: 15px;
        border: 1px solid #ced4da;
        border-radius: 4px;
    }

    h3 {
        margin-bottom: 15px;
        font-size: 18px;
    }

    .form-group {
        margin-bottom: 10px;
    }

    .form-label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 8px 10px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        font-size: 14px;
        height: 40px;
        line-height: 1.5;
        box-sizing: border-box;
    }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    /* Loại bỏ mũi tên tăng/giảm trên Chrome, Safari, Edge và Opera */
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        /* Tắt hiển thị mặc định */
        margin: 0;
        /* Loại bỏ khoảng cách */
    }

    /* Loại bỏ mũi tên tăng/giảm trên Firefox */
    input[type=number] {
        -moz-appearance: textfield;
        /* Biến thành input dạng text */
    }

    .config-memory-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .display-info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .camera-info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

        .camera-info-grid label[for="QuayPhimCameraSau"] {
            grid-column: 1 / -1;
        }

        .camera-info-grid textarea[id="QuayPhimCameraSau"] {
            grid-column: 1 / -1;
            height: auto;
            /* Để textarea tự điều chỉnh chiều cao */
            min-height: 80px;
            /* Chiều cao tối thiểu để có thể nhập nhiều dòng */
        }

    .battery-info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .utilities-info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .connection-info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .design-material-info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }


    .other-info-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
    }

    .form-row {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 10px;
    }

    .form-group--actions {
        text-align: center;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 14px;
        border-radius: 4px;
        text-decoration: none;
        text-align: center;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        margin-left: 10px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>