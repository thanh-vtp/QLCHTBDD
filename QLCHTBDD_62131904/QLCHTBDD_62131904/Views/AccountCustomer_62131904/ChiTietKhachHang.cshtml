@model QLCHTBDD_62131904.Models.KhachHang

@{
    ViewBag.Title = "Thông Tin Tài Khoản";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<div class="container account-info">
    <h2 class="page-title">Thông Tin Tài Khoản</h2>

    <div class="account-details">
        @using (Html.BeginForm("CapNhatThongTin", "AccountCustomer_62131904", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="detail-item">
                <span class="label">Họ và tên:</span>
                @Html.TextBoxFor(model => model.HoTen, new { @class = "form-control editable", @readonly = "readonly" })
                <span class="edit-icon" onclick="enableEditing(this)">
                    <i class="fas fa-edit"></i>
                </span>
            </div>

            <div class="detail-item">
                <span class="label">Email:</span>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control editable", @readonly = "readonly" })
                <span class="edit-icon" onclick="enableEditing(this)">
                    <i class="fas fa-edit"></i>
                </span>
            </div>

            <div class="detail-item">
                <span class="label">Số điện thoại:</span>
                @Html.TextBoxFor(model => model.SoDienThoai, new { @class = "form-control editable", @readonly = "readonly" })
                <span class="edit-icon" onclick="enableEditing(this)">
                    <i class="fas fa-edit"></i>
                </span>
            </div>

            <div class="detail-item">
                <span class="label">Địa chỉ:</span>
                @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control editable", @readonly = "readonly" })
                <span class="edit-icon" onclick="enableEditing(this)">
                    <i class="fas fa-edit"></i>
                </span>
            </div>

            <div class="detail-item">
                <span class="label">Ngày sinh:</span>
                @Html.TextBox("NgaySinh", Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("yyyy-MM-dd") : "", new
                {
                    @class = "form-control editable",
                    type = "date", // Định dạng input là date
                    @readonly = "readonly"
                })
                <span class="edit-icon" onclick="enableEditing(this)">
                    <i class="fas fa-edit"></i>
                </span>
            </div>

            <div class="detail-item">
                <span class="label">Mật khẩu:</span>
                <input type="text"
                       class="form-control editable"
                       placeholder="Nhấp để đổi mật khẩu"
                       readonly
                       onclick="redirectToChangePassword()" />
            </div>


            <div class="text-center mt-4">
                <button type="submit" class="btn btn-update">Cập nhật thông tin</button>
            </div>
        }
    </div>
    </div>

<script>
        function enableEditing(icon) {
            const input = icon.previousElementSibling;
            if (input.hasAttribute("readonly")) {
                // Nếu input đang ở trạng thái readonly, bật chỉnh sửa
                input.removeAttribute("readonly");
                input.focus();
            } else {
                // Nếu input không còn readonly, khóa lại
                input.setAttribute("readonly", "readonly");
            }
        }

        function redirectToChangePassword() {
        window.location.href = '@Url.Action("DoiMatKhau", "AccountCustomer_62131904")';
    }
</script>

    <style>
        .container.account-info {
            max-width: 800px;
            background: #fff;
            border-radius: 8px;
            padding: 20px 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            font-family: Arial, sans-serif;
            color: #333;
        }

        .page-title {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .detail-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #f1f1f1;
            position: relative;
        }

            .detail-item:last-child {
                border-bottom: none;
            }

            .detail-item .label {
                font-weight: bold;
                color: #666;
                flex: 1;
            }

        .form-control.editable {
            flex: 2;
            margin-left: 10px;
            border: none;
            border-bottom: 1px solid #ddd;
            background-color: transparent;
            color: #333;
        }

            .form-control.editable:focus {
                outline: none;
                border-bottom: 1px solid #007bff;
            }

        .edit-icon {
            margin-left: 10px;
            color: #666;
            cursor: pointer;
        }

            .edit-icon:hover {
                color: #007bff;
            }

        .btn-update {
            background-color: #4CAF50;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            font-weight: bold;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }

            .btn-update:hover {
                background-color: #388E3C;
                transform: scale(1.05);
            }
    </style>
