@model QLCHTBDD_62131904.Models.LoaiSanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 10px; max-width: 600px; background-color: #f9f9f9;">
    <h2 style="text-align: center; font-weight: bold; color: #007BFF;">Cập nhật thông tin</h2>

    @using (Html.BeginForm("Edit", "LoaiSanPhams_62131904", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div style="margin-bottom: 20px;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaLSP)
        </div>

        <div style="margin-bottom: 15px;">
            <label for="TenLSP" style="font-weight: bold; margin-bottom: 5px; display: block;">Tên loại sản phẩm:</label>
            @Html.EditorFor(model => model.TenLSP, new { htmlAttributes = new { @class = "form-control", style = "width: 100%;" } })
            @Html.ValidationMessageFor(model => model.TenLSP, "", new { @class = "text-danger" })
        </div>

        <div style="text-align: center; margin-top: 20px;">
            <button type="submit" class="btn btn-primary" style="padding: 10px 15px; margin-right: 10px;">Lưu thay đổi</button>
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary", style = "padding: 10px 15px; text-decoration: none;" })
        </div>
    }
</div>


<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }
</style>
