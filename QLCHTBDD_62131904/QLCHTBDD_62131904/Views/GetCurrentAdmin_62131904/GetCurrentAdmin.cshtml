@model QLCHTBDD_62131904.Models.QuanTriHeThong


@{
    ViewBag.Title = "Thông tin đăng nhập";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string _admin = Model.Admin == true ? "Admin" : "Nhân viên";
}

<div style="margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 10px; max-width: 600px; background-color: #f9f9f9;">
    <h2 style="text-align: center; margin-bottom: 20px; font-weight: bold; color: #007BFF;">Thông tin quản trị viên</h2>

    <div style="margin-bottom: 15px;">
        <span style="font-weight: bold; color: #333; display: inline-block; width: 120px;">Email:</span>
        <span style="color: #555;">@Model.Email</span>
    </div>

    <div style="margin-bottom: 15px;">
        <span style="font-weight: bold; color: #333; display: inline-block; width: 120px;">Quyền:</span>
        <span style="color: #555;">@_admin</span>
    </div>

    <div style="margin-bottom: 15px;">
        <span style="font-weight: bold; color: #333; display: inline-block; width: 120px;">Họ tên:</span>
        <span style="color: #555;">@Model.HoTen</span>
    </div>
</div>


<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }
</style>