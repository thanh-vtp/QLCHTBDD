@model QLCHTBDD_62131904.Models.QuanTriHeThong

@{
    ViewBag.Title = "Thay đổi thông tin quản trị viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 10px; max-width: 600px; background-color: #f9f9f9;">
    <h2 style="text-align: center; font-weight: bold; color: #007BFF;">Cập nhật thông tin</h2>

    @using (Html.BeginForm("Edit", "QuanTriHeThongs_62131904", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div style="margin-bottom: 20px;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaQT)
        </div>

        <div style="margin-bottom: 15px;">
            <label for="Email" style="font-weight: bold; margin-bottom: 5px; display: block;">Email</label>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", style = "width: 100%;" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div style="margin-bottom: 15px;">
            <label for="Admin" style="font-weight: bold; margin-bottom: 5px; display: block;">Quyền</label>
            @Html.DropDownListFor(model => model.Admin,
                new SelectList(new List<SelectListItem>
                {
                    new SelectListItem { Text = "Admin", Value = "true" },
                    new SelectListItem { Text = "Nhân viên", Value = "false" }
                }, "Value", "Text"),
                "Chọn quyền", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Admin, "", new { @class = "text-danger" })
        </div>

        <div style="margin-bottom: 15px;">
            <label for="HoTen" style="font-weight: bold; margin-bottom: 5px; display: block;">Họ tên</label>
            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", style = "width: 100%;" } })
            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
        </div>

        <div style="margin-bottom: 15px;">
            <label for="Password" style="font-weight: bold; margin-bottom: 5px; display: block;">Mật khẩu</label>
            <input type="password" name="Password" class="form-control" style="width: 100%;" placeholder="Nhập mật khẩu mới (nếu muốn thay đổi)">
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>

        <div style="margin-bottom: 15px;">
            <label for="IsActive" style="font-weight: bold; margin-bottom: 5px; display: block;">Trạng thái</label>
            @Html.DropDownListFor(model => model.IsActive,
                new SelectList(new List<SelectListItem>
                {
                    new SelectListItem { Text = "Đã kích hoạt", Value = "true" },
                    new SelectListItem { Text = "Chưa kích hoạt", Value = "false" }
                }, "Value", "Text"),
                "Chọn trạng thái", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Admin, "", new { @class = "text-danger" })
        </div>

        <div style="text-align: center; margin-top: 20px;">
            <button type="submit" class="btn btn-primary" style="padding: 10px 15px; margin-right: 10px;">Lưu thay đổi</button>
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary", style = "padding: 10px 15px; text-decoration: none;" })
        </div>
    }
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }
</style>