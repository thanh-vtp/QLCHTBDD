@model QLCHTBDD_62131904.Models.QuanTriHeThong

@{
    ViewBag.Title = "Xoá quản trị viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string _admin = Model.Admin == true ? "Admin" : "Nhân viên";
}


<div style="margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 10px; max-width: 600px; background-color: #f9f9f9;">
    <h2 style="text-align: center; font-weight: bold; color: #007BFF;">Thông tin chi tiết</h2>
    <table style="width: 100%; font-size: 14px; border-collapse: collapse;">
        <tr>
            <td style="font-weight: bold; padding: 8px; border-bottom: 1px solid #ddd;">Email</td>
            <td style="padding: 8px; border-bottom: 1px solid #ddd;">@Model.Email</td>
        </tr>
        <tr>
            <td style="font-weight: bold; padding: 8px; border-bottom: 1px solid #ddd;">Quyền:</td>
            <td style="padding: 8px; border-bottom: 1px solid #ddd;">@_admin</td>
        </tr>
        <tr>
            <td style="font-weight: bold; padding: 8px; border-bottom: 1px solid #ddd;">Họ tên:</td>
            <td style="padding: 8px; border-bottom: 1px solid #ddd;">@Model.HoTen</td>
        </tr>
        <tr>
            <td style="font-weight: bold; padding: 8px; border-bottom: 1px solid #ddd;">Trạng thái:</td>
            <td style="padding: 8px; border-bottom: 1px solid #ddd;">
                @if (Model.IsActive)
                {
                    <span class="active-status">Đã kích hoạt</span>
                }
                else
                {
                    <span class="inactive-status">Chưa kích hoạt</span>
                }
            </td>
        </tr>
    </table>

    <!-- Button Xóa sẽ kích hoạt Modal -->
    <div style="text-align: center; margin-top: 20px;">
        <button type="button" class="btn btn-danger" style="padding: 10px 15px; margin-right: 10px;" data-toggle="modal" data-target="#deleteModal">Xóa</button>
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary", style = "padding: 10px 15px; text-decoration: none;" })
    </div>
</div>

<!-- Modal Cảnh báo -->
<div class="modal" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa Quản Trị Viên này không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <form method="post" action="@Url.Action("Delete", "QuanTriHeThongs_62131904", new { id = Model.MaQT })">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }
    .active-status {
        color: green;
        font-weight: bold;
    }

    .inactive-status {
        color: red;
        font-weight: bold;
    }
</style>