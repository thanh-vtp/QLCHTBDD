    </div>

    <!-- Footer -->
    <div id="footer">
        Copyright &copy; @DateTime.Now.Year | Hệ thống bán lẻ điện thoại di động
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>

<!-- Popup message -->
@if (TempData["SuccessMessage"] != null || TempData["ErrorMessage"] != null)
{
    var popupClass = TempData["SuccessMessage"] != null ? "success" : "error";
    var message = TempData["SuccessMessage"] ?? TempData["ErrorMessage"];

    <div id="popupMessage" class="popup-message @popupClass">
        @message
    </div>
}

<style>
    .popup-message {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 9999;
        padding: 15px 20px;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        animation: slideIn 0.5s, fadeOut 0.5s 2.5s;
    }

        .popup-message.success {
            background-color: #28a745; /* Green for success */
        }

        .popup-message.error {
            background-color: #dc3545; /* Red for error */
        }

    @@keyframes slideIn {
        from {
            transform: translateX(100%);
        }

        to {
            transform: translateX(0);
        }
    }

    @@keyframes fadeOut {
        from {
            opacity: 1;
        }

        to {
            opacity: 0;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const popup = document.getElementById("popupMessage");
        if (popup) {
            setTimeout(() => {
                popup.style.display = "none";
            }, 3000); // 3 seconds
        }
    });
</script>
