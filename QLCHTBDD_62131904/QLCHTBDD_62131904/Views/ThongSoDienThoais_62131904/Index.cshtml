@model IEnumerable<QLCHTBDD_62131904.Models.ThongSoDienThoai>
@{
    ViewBag.Title = "Danh sách thông số của điện thoại";
    var grid = new WebGrid(source: Model, canPage: true, defaultSort: "SanPham.TenSP", rowsPerPage: 20);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js");
}

<link href="~/Content/_page_index_projects.css" rel="stylesheet" />
<h2>Danh sách thông số kỹ thuật</h2>
<p class="text-left mb-3">
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>

<div id="gridContent" style="overflow-x: auto; white-space: nowrap;">
    @grid.GetHtml(
        tableStyle: "table table-bordered table-striped",
        headerStyle: "table-header thead-light",
        alternatingRowStyle: "table-alternate-row",
        mode: WebGridPagerModes.Numeric,
        columns: grid.Columns(
            grid.Column("STT", format: item => grid.Rows.IndexOf(item) + 1 + (grid.PageIndex * grid.RowsPerPage), header: "STT"),
            grid.Column("SanPham.TenSP", "Tên SP", format: item => item.SanPham?.TenSP ?? "N/A"),
            grid.Column("PhienBanHDH.TenPhienBanHDH", "Hệ Điều Hành", format: item => item.PhienBanHDH?.TenPhienBanHDH ?? "N/A"),
            grid.Column("DanhBa", "Danh Bạ", format: item => item.DanhBa ? "Có" : "Không"),
            grid.Column("DenFlashCameraSau", "Đèn Flash", format: item => item.DenFlashCameraSau ? "Có" : "Không"),
            grid.Column("ChuanKhangBuiNuoc.TenChuanKhangBuiNuoc", "Kháng Bụi/Nước", format: item => item.ChuanKhangBuiNuoc?.TenChuanKhangBuiNuoc ?? "N/A"),
            grid.Column("CongNgheManHinh.TenCongNgheManHinh", "Công Nghệ Màn Hình", format: item => item.CongNgheManHinh?.TenCongNgheManHinh ?? "N/A"),
            grid.Column("DoSangToiDa.DoSang", "Độ Sáng Tối Đa", format: item => item.DoSangToiDa?.DoSang.ToString() ?? "N/A"),
            grid.Column("LoaiKinhCuongLuc.TenLoaiKinh", "Loại Kính Cường Lực", format: item => item.LoaiKinhCuongLuc?.TenLoaiKinh ?? "N/A"),
            grid.Column("LoaiPin.TenLoaiPin", "Loại Pin", format: item => item.LoaiPin?.TenLoaiPin ?? "N/A"),
            grid.Column("HoTroSacToiDa.CongSuat", "Hỗ Trợ Sạc Tối Đa", format: item => item.HoTroSacToiDa?.CongSuat.ToString() ?? "N/A"),
            grid.Column("TinhNangBaoMat.TenTinhNangBaoMat", "Tính Năng Bảo Mật", format: item => item.TinhNangBaoMat?.TenTinhNangBaoMat ?? "N/A"),
            grid.Column("DinhDangGhiAm.TenDinhDangGhiAm", "Định Dạng Ghi Âm", format: item => item.DinhDangGhiAm?.TenDinhDangGhiAm ?? "N/A"),
            grid.Column("MangDiDong.TenMangDiDong", "Mạng Di Động", format: item => item.MangDiDong?.TenMangDiDong ?? "N/A"),
            grid.Column("SIM.TenSIM", "Loại SIM", format: item => item.SIM?.TenSIM ?? "N/A"),
            grid.Column("Bluetooth.TenBluetooth", "Bluetooth", format: item => item.Bluetooth?.TenBluetooth ?? "N/A"),
            grid.Column("CongKetNoiSac.TenCongKetNoiSac", "Cổng Kết Nối/Sạc", format: item => item.CongKetNoiSac?.TenCongKetNoiSac ?? "N/A"),
            grid.Column("JackTaiNghe.TenJackTaiNghe", "Jack Tai Nghe", format: item => item.JackTaiNghe?.TenJackTaiNghe ?? "N/A"),
            grid.Column("CongKetNoiKhac.TenCongKetNoiKhac", "Cổng Kết Nối Khác", format: item => item.CongKetNoiKhac?.TenCongKetNoiKhac ?? "N/A"),
            grid.Column("ThietKe.TenThietKe", "Thiết Kế", format: item => item.ThietKe?.TenThietKe ?? "N/A"),
            grid.Column("ChatLieu.TenChatLieu", "Chất Liệu", format: item => item.ChatLieu?.TenChatLieu ?? "N/A"),
            grid.Column("ThoiDiemRaMat", "Thời Điểm Ra Mắt", format: item => item.ThoiDiemRaMat ?? "N/A"),
            grid.Column("Chức năng", format: @<text>
                    <a href="@Url.Action("Edit", new { id = item.MaTSDT })" title="Cập nhật" class='btn btn-sm btn-warning'>Sửa</a>
                    <a href="@Url.Action("Details", new { id = item.MaTSDT })" title="Xem chi tiết" class='btn btn-sm btn-info'>Chi tiết</a>
                    <a href="@Url.Action("Delete", new { id = item.MaTSDT })" title="Xóa" class='btn btn-sm btn-danger'>Xóa</a>
            </text>)
)
)
</div>
