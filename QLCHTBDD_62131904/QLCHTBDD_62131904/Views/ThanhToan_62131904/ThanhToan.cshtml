@model QLCHTBDD_62131904.ViewModels.ThanhToanViewModel

@{
    ViewBag.Title = "ThanhToan";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container mt-4">
    <h2>Thanh toán</h2>

    <div class="row">
        <div class="col-md-8">
            <h4>Thông tin sản phẩm</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Màu sắc</th>
                        <th>RAM</th>
                        <th>ROM</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sp in Model.SanPhams)
                    {
                        <tr>
                            <td>@sp.TenSanPham</td>
                            <td>@sp.MauSac</td>
                            <td>@sp.RAM</td>
                            <td>@sp.ROM</td>
                            <td>@sp.SoLuong</td>
                            <td>@sp.DonGia.ToString("N0") đ</td>
                            <td>@sp.ThanhTien.ToString("N0") đ</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="6" class="text-right"><strong>Tổng cộng:</strong></td>
                        <td>@Model.TongTien.ToString("N0") đ</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="col-md-4">
            <h4>Thông tin khách hàng</h4>
            <p><strong>Tên khách hàng:</strong> @Model.TenKhachHang</p>
            <p><strong>Tổng tiền:</strong> @Model.TongTien.ToString("N0") đ</p>

            <form action="@Url.Action("XacNhanThanhToan", "ThanhToan_62131904")" method="post">
                <button type="submit" class="btn btn-success btn-block">Xác nhận thanh toán</button>
            </form>
        </div>
    </div>
</div>


